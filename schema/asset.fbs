include "primitives.fbs";

namespace protocol;

table Currency {
  amount: [ubyte] (required);
  precision:  ubyte;
}

// [WIP] ComplexAsset
table ComplexAsset {
  prop:   [ubyte] (required);
}

union AnyAsset {
  Currency,
  ComplexAsset
}

table Asset {
  name: string;
  uuid: string;
  target_domain: string (required);
  asset:  AnyAsset  (required);
}
